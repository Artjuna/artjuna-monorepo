<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginHorizontal="@dimen/_4sdp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_108sdp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_4sdp">

            <TextView
                android:id="@+id/tv_name"
                style="@style/Body1Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Talenan Kayu Keren Banget"/>

            <TextView
                android:id="@+id/tv_price"
                style="@style/Body1Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:text="Rp 80.000"/>

            <TextView
                android:id="@+id/tv_city"
                style="@style/Body2Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:text="Kota Bandung"/>

            <TextView
                android:id="@+id/tv_rating_sold"
                style="@style/Body2Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_2sdp"
                android:text="4.5 | 832 Sold"
                app:drawableLeftCompat="@drawable/ic_star_card_small" />


        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
