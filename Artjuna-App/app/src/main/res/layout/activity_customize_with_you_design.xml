<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey_200"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="660dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_add_photo"
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:src="@drawable/bg_photo2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"

                />
            <TextView
                android:id="@+id/tv_product_name"
                style="@style/Subtitle1Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Cellero Caberro Painting" />

            <TextView
                android:id="@+id/tv_product_price"
                style="@style/Body2Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="16dp"
                android:text="Rp 80.000" />

            <Button
                android:id="@+id/btn_add_photo"
                style="@style/ButtonSecondary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="@string/add_your_own_design" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/bottombar"
        layout="@layout/bottombar_pure_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>